<!DOCTYPE html>
<html>
<head>
  <title>Sixth Cents</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="top-bar group">
    <a href="#" class="main-logo">Sixth Cents</a>

    <% if logged_in? %>
      <div class="right-nav">
        <a href="#/accounts">Transactions</a>
        <a href="#/budgets">Budgets</a>
        <a href="#">Trends</a>
        <a href="#">Goals</a>
        <form class="logout-button" action="<%= session_url %>" method="post">
          <%= form_auth %>
          <input type="hidden" name="_method" value="delete">
          <button name="logout">Logout</button>
        </form>
      </div>

    <% else %>
      <div class="logging-links">
        <a href="<%=  new_session_url %>">Login</a>
        <a href="<%=  new_user_url %>">Sign Up!</a>
      </div>
    <% end %>
  </div>
    <% if !flash.now[:errors].nil? %>
      <ul>

          <% flash.now[:errors].each do |error| %>
            <li><%= error %></li>
          <% end %>

      </ul>
    <% end %>

<%= yield %>

</body>
</html>
