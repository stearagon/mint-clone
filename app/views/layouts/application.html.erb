<!DOCTYPE html>
<html>
<head>
  <title>Sixth Cents</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if logged_in? %>
  <div class="group top-header-container">
    <div class="top-header">
      <a href="#">Hi <%= current_user.email %></a>
      <form action="<%= session_url %>" method="post">
        <%= form_auth %>
        <input type="hidden" name="_method" value="delete">
        <button name="logout" class="logout-button">Logout</button>
      </form>
    </div>
  </div>
  <% end %>
  <div class="top-bar-container group">
    <div class="top-bar">
      <a href="#" class="main-logo">Sixth Cents</a>
      <% if logged_in? %>
        <ul class="right-nav group">
          <li><a href="#/">Overview</a></li>
          <li><a href="#/accounts">Transactions</a></li>
          <li><a href="#/budgets">Budgets</a></li>
          <li><a href="#">Trends</a></li>
          <li><a href="#">Goals</a></li>
        </ul>
    </div>
    <% else %>
      <div class="logging-links">
        <a href="<%=  new_session_url %>">Login</a>
        <a href="<%=  new_user_url %>">Sign Up!</a>
      </div>
    <% end %>
  </div>
    <% if !flash.now[:errors].nil? %>
      <ul>

          <% flash.now[:errors].each do |error| %>
            <li><%= error %></li>
          <% end %>

      </ul>
    <% end %>


<%= yield %>

</body>
</html>
