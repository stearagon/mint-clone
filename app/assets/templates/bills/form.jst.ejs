<h1>Add Bill</h1>

<label for="account">Account: </label><br>
<select name="account_id" id="account">
  <% accounts.forEach(function(account){ %>
    <% var selected = ""; %>
    <option <%= selected %> value="<%= account.get("id") %>"><%= account.institution().escape("name") %> - <%= account.get("account_type") %>(<%= account.get("identifier") %>)</option>
<% }) %>
</select><br>


<label for="date">Date: </label><br>
<input id="date" type="date" name="bill_date" value="<%= bill.escape("bill_date") %>"><br>

<label for="amount">Amount: </label><br>
$ <input id="amount" type="number" name="amount" value="<%= bill.escape("amount") %>"><br>

<button class="submit-bill">Create Bill</button> or <a class="cancel-form" href="#">Cancel</a>
